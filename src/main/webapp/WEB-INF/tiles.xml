<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name=".base" template="/WEB-INF/views/_base.jspx">
        <put-attribute name="content" type="template" cascade="true"/>
        <put-attribute name="titleCode" type="string" cascade="true" value="base.title"/>
        <put-attribute name="subTitleCode" type="string" cascade="true" value="" />
    </definition>

    <definition name=".*" extends=".base">
        <put-attribute name="content" type="template" cascade="true" value="/WEB-INF/views/{1}.jspx"/>
        <put-attribute name="subTitleCode" type="string" cascade="true" value="{1}.sub-title" />
    </definition>

</tiles-definitions>
