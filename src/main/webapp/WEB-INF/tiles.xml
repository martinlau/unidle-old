<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name=".base" template="/WEB-INF/views/_base.jspx">
        <put-attribute name="content" type="template"/>
        <put-attribute name="titleCode" type="string" value="base.title"/>
    </definition>

    <definition name=".*" extends=".base">
        <put-attribute name="content" type="template" value="/WEB-INF/views/{1}.jspx"/>
    </definition>

</tiles-definitions>
