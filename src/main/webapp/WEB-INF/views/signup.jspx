<jsp:root xmlns="http://www.w3.org/1999/xhtml"
          xmlns:form="http://www.springframework.org/tags/form"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:spring="http://www.springframework.org/tags"
          xmlns:tags="urn:jsptagdir:/WEB-INF/tags"
          version="2.0">

    <h1 class="text-center">
        <spring:message code="base.title" />
    </h1>

    <p>
        <spring:message code="signup.introduction" />
    </p>

    <form:form cssClass="form-inline" modelAttribute="userForm" role="form">

        <tags:input path="firstName" type="text">
            <jsp:attribute name="label">
                <spring:message code="signup.form.first-name.label" />
            </jsp:attribute>
            <jsp:attribute name="placeholder">
                <spring:message code="signup.form.first-name.placeholder" />
            </jsp:attribute>
        </tags:input>

        <tags:input path="lastName" type="text">
            <jsp:attribute name="label">
                <spring:message code="signup.form.last-name.label" />
            </jsp:attribute>
            <jsp:attribute name="placeholder">
                <spring:message code="signup.form.last-name.placeholder" />
            </jsp:attribute>
        </tags:input>

        <tags:input path="email" type="email">
            <jsp:attribute name="label">
                <spring:message code="signup.form.email.label" />
            </jsp:attribute>
            <jsp:attribute name="placeholder">
                <spring:message code="signup.form.email.placeholder" />
            </jsp:attribute>
        </tags:input>

        <p>
            <form:button type="submit" class="btn btn-lg btn-block btn-primary" name="action" value="confirm">
                <spring:message code="singup.form.submit" />
            </form:button>
        </p>

    </form:form>

</jsp:root>
